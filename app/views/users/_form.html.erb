<%= simple_form_for(@user, html: { class: 'form form-inline'}) do |f| %>
  <div class='input-row w600'>
    <% if @user.new_record? %>
      <%= f.input :username, input_html: { class: 'form-control' } %>
    <% else %>
      <%= f.input :username, input_html: { class: 'form-control', readonly: true } %>
    <% end %>
  </div>
  <div class='input-row'>
    <%= f.input :password, placeholder: 'Password'%>
  </div>
  <div class='input-row'>
    <%= f.input :password_confirmation, placeholder: 'Password confirmation' %>
  </div>
  <div class='input-row'>
    <%= f.input :role, collection: [User::ROLE_ADMIN, User::ROLE_USER, User::ROLE_OPERATOR] %>
  </div>
  <div class='input-row'>
    <%= f.input :name, label: 'Full Name' %>
  </div>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>