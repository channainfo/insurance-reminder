<%= simple_form_for(@operational_district, html: {class: 'form form-inline'}) do |f| %>

  <div class="form-inputs">
    <div class='row input-row'>
      <%= f.input :name %>
    </div>

    <div class='row input-row'>
      <%= f.input :code %>
    </div>

    <div class='row input-row'>
      <%= f.input :external_id, input_html: { maxlength: 1 } %>
    </div>

    <div class='row input-row'>
      <label>Enable reminder</label>
      <%= f.input :enable_reminder, label: false %>
    </div>
  </div>

  <div class="form-actions">
    <label> </label>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
