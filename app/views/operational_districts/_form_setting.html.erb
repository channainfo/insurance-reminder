<%= form_tag(update_settings_operational_district_path(@operational_district), method: :put, class: 'form') do %>
  <div class="form-group clearfix">
    <%= label_tag 'pending_call_day', 'Get record in ', class: 'col-sm-2' %>
    <%= text_field_tag 'day_expired_get_record', @settings[:day_expired_get_record], class: 'w65 form-control col-sm-2 numeric', size: 2, maxlength: 2 %>
    <span class='col-sm-4'>days </span>
  </div>

  <div class="form-group clearfix">
    <%= label_tag 'day_before_expiration_date', 'And call', class: 'col-sm-2' %>
    <%= text_field_tag 'day_expired_call', @settings[:day_expired_call], class: 'w65 form-control col-sm-2 numeric', size: 2, maxlength: 2 %>
    <span class='col-sm-4'>days before expiration date</span>
  </div>

  <div class="form-group clearfix">
    <%= label_tag :recalls, 'After', class: 'col-sm-2' %>
    <%= text_field_tag :number_mark_as_failed, @settings[:number_mark_as_failed], class: 'w65 form-control col-sm-2 numeric', size: 2, maxlength: 2 %>
    <span class='col-sm-4'>unsuccessful calls mark as status as failed</span>
  </div>

  <div class="form-group clearfix">
    <label> </label>
    <%= submit_tag 'Save', class: "btn btn-primary" %>
  </div>

<% end %>