<% content_for(:title) { "Login" } %>

<div class='form-box'>
  <%= form_tag sessions_path, role: 'form', class: 'form', style: 'padding: 15px;' do %>
    <div class='row'>
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'User name' %>
    </div>
    
    <div class='row'>
      <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class='row' >
      <%= button_tag "Login", class: 'btn btn-primary btn-block', style: 'display: block; width: 100%;' %>
    </div>

  <% end %>
</div>