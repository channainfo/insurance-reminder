<% content_for(:title) { "Login" } %>

<%= form_tag sessions_path, role: 'form', class: 'form' do %>
  <div class='input-row'>
    <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'User name' %>
  </div>
  
  <div class='input-row'>
    <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class='input-row' >
    <%= button_tag "Login", class: 'btn btn-primary btn-block', style: 'display: block; width: 100%;' %>
  </div>

<% end %>
