<%= form_tag verboice_path, class: 'form form-inline' do %>
  <div class='input-row'>
    <%= label_tag :email %>
    <%= text_field_tag :email, Setting[:verboice_email], class: 'form-control' %>
  </div>

  <div class='input'>
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: 'form-control', autocomplete: :off %>
  </div>

  <div class='input-row'>
    <label></label>
    <%=link_to 'Connect', verboice_path, id: 'btn-verboice-connect', class: 'btn btn-primary' %>
  </div>
<% end %>


